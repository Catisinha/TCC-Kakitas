@model IEnumerable<MAContabilidade.Models.Servico>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Serviços</h1>
<p class="my-3">
    <a class="btn btn-primary" asp-action="Create">
        <i class="bi bi-plus-circle me-2"></i>
        Adicionar
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th style="width:100px">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    <a class="text-decoration-none" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="bi bi-pencil text-warning me-2" title="Alterar"></i>
                    </a>
                    <a class="text-decoration-none" asp-action="Details" asp-route-id="@item.Id">
                        <i class="bi bi-search text-info me-2"></i>
                    </a>
                    <a class="text-decoration-none" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="bi bi-trash text-danger"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
